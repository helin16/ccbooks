<config>
    <modules>
        <W4U_Paymate>
            <version>1.4.1</version>
            <depends>
                <Mage_Payment />
            </depends>
        </W4U_Paymate>
    </modules>
    <global>
    	<models>
    		<paymate>
	    		<class>W4U_Paymate_Model</class>
	    	</paymate>
    	</models>
    	<helpers>
    		<paymate>
    			<class>W4U_Paymate_Helper</class>
    		</paymate>
    	</helpers>
    	<blocks>
            <paymate>
            	<class>W4U_Paymate_Block</class>
            </paymate>
        </blocks>
        <resources>
            <paymate_setup>
                <setup>
                    <module>W4U_Paymate</module>
                </setup>
                <connection>
                    <use>directory_setup</use>
                </connection>
            </paymate_setup>
            <paymate_write>
                <connection>
                    <use>local_write</use>
                </connection>
            </paymate_write>
            <paymate_read>
                <connection>
                    <use>local_read</use>
                </connection>
            </paymate_read>
        </resources>
    </global>
    <frontend>
        <routers>
            <paymate>
                <use>standard</use>
                <args>
                    <module>W4U_Paymate</module>
                    <frontName>paymate</frontName>
                </args>
            </paymate>
        </routers>
        <secure_url>
            <paymate>/paymate/paymate</paymate>
        </secure_url>
    </frontend>
	<default>
        <payment>
            <paymate>
                <active>0</active>
                <cctypes>VI,MC</cctypes>
                <cgi_url>https://www.paymate.com/PayMate/TestExpressPayment</cgi_url>
                <model>paymate/paymate</model>
                <order_status>1</order_status>
                <test>1</test>
                <title>Credit Card - Paymate</title>
                <username></username>
                <allowspecific>0</allowspecific>
            </paymate>
        </payment>
    </default>
</config>
